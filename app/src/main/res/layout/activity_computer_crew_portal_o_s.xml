<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181a1c"
    tools:context=".ComputerCrewPortalOS">

    <ImageView
        android:id="@+id/background_imageView"
        android:layout_width="1080dp"
        android:layout_height="700dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:background="@drawable/portal_os_loading" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="63dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/back_button"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="66dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/next_button2"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/nextButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="519dp"
        android:layout_marginTop="333dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/next_button2"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:onClick="exitButton"
        app:srcCompat="@drawable/exit_button" />

</RelativeLayout>