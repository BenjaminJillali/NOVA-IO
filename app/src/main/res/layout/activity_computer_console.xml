<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212621"
    tools:context=".ComputerConsole">

    <ImageView
        android:id="@+id/background_imageView"
        android:layout_width="1080dp"
        android:layout_height="750dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:background="@drawable/computer_console" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:onClick="exitButton"
        app:srcCompat="@drawable/exit_button" />

    <TextView
        android:id="@+id/consoleOutput"
        android:layout_width="541dp"
        android:layout_height="285dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/pixel_font"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="#009688"
        android:textSize="6sp" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="496dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pixel_font"
        android:ems="10"
        android:textSize="6sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:textCursorDrawable="@null"
        android:inputType="textPersonName" />

</RelativeLayout>